<%-include("includes/head",{title:"manage_products"}) %>
  
    <script src="/javascript/preview.js" defer></script>

    <body>
        <%-include("includes/header") %>
            <main>
                <form action="/admin/manage_product_forms" method="post" enctype="multipart/form-data">
                    <ul id="manage_orders">
                        <!-- <li>
                            <input type="hidden" name="_csrf" value="">
                        </li> -->
                        <li>
                            <h1>Add new Product</h1>
                        </li>
                        <li>
                            <label for="title">Title</label>
                            <input type="text" id="title" name="title">
                        </li>
                        <li>
                            <label for="image">Image</label>
                            <div id="file">
                                <input type="file" id="image" name="images" >
                                <img class="preview" src=""
                                    alt="Not yet">
                            </div>
                        </li>
                        <li>
                            <label for="summary">Summary</label>
                            <input type="text" id="summary" name="summary" >
                        </li>
                        <li>
                            <label for="price">Price</label>
                            <input type="text" id="price" name="price" >
                        </li>
                        <li>
                            <label for="description">Description</label>
                            <textarea name="description" id="description" cols="30" rows="10"></textarea>
                        </li>
                        <div id="sub_res">
                            <li><button type="reset" id="reset">Reset</button></li>
                            <li><button type="submit" id="submit">Submit</button></li>
                        </div>
                    </ul>
                </form>
            </main>
    </body>